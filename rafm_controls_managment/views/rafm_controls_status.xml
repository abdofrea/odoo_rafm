<odoo>
    <record id="view_rafm_controls_status_form" model="ir.ui.view">
        <field name="name">rafm.controls.status.form</field>
        <field name="model">rafm.controls.status</field>
        <field name="arch" type="xml">
            <form string="Control Status Logs" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="time_stamp"/>
                        </group>
                        <group>
                            <field name="status" widget="badge" decoration-warning="status == 'etl_issue'" decoration-danger="status == 'suspected'" decoration-success="status == 'pass'"/>
                            <field name="description" colspan="2"/>
                        </group>
                        <group>
                            <field name="user_id" options="{'no_open': True}"/>
                            <field name="control_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_rafm_controls_status_tree" model="ir.ui.view">
        <field name="name">rafm.controls.status.tree</field>
        <field name="model">rafm.controls.status</field>
        <field name="arch" type="xml">
            <tree string="Control Status Logs" create="false" edit="false" delete="false">
                <field name="control_id"/>
                <field name="time_stamp"/>
                <field name="status" widget="badge" decoration-warning="status == 'etl_issue'" decoration-danger="status == 'suspected'" decoration-success="status == 'pass'"/>
                <field name="description"/>
                <field name="user_id" options="{'no_open': True}"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_rafm_control_status_view" model="ir.actions.act_window">
        <field name="name">Control Status Logs</field>
        <field name="res_model">rafm.controls.status</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
