<odoo>
    <record id="view_rafm_control_category_form" model="ir.ui.view">
        <field name="name">rafm.control.category.form</field>
        <field name="model">rafm.control.category</field>
        <field name="arch" type="xml">
            <form string="RAFM Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rafm_control_category_tree" model="ir.ui.view">
        <field name="name">rafm.control.category.tree</field>
        <field name="model">rafm.control.category</field>
        <field name="arch" type="xml">
            <tree string="RAFM Category">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_rafm_category" model="ir.actions.act_window">
        <field name="name">RAFM Category</field>
        <field name="res_model">rafm.control.category</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
