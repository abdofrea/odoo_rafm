<odoo>
    <record id="view_rafm_controls_modification_form" model="ir.ui.view">
        <field name="name">rafm.controls.modification.name</field>
        <field name="model">rafm.controls.modification</field>
        <field name="arch" type="xml">
            <form string="Modification Logs" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="time_stamp"/>
                        </group>
                        <group>
                            <field name="description" colspan="2"/>
                        </group>
                        <group>
                            <field name="user_id" options="{'no_open': True}"/>
                            <field name="control_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rafm_controls_modification_tree" model="ir.ui.view">
        <field name="name">rafm.controls.modification.tree</field>
        <field name="model">rafm.controls.modification</field>
        <field name="arch" type="xml">
            <tree string="Modification Logs" create="false" edit="false" delete="false">
                <field name="control_id"/>
                <field name="time_stamp"/>
                <field name="description"/>
                <field name="user_id" options="{'no_open': True}"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_rafm_modification_logs" model="ir.actions.act_window">
        <field name="name">Modification Logs</field>
        <field name="res_model">rafm.controls.modification</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
