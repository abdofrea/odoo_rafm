<odoo>
    <!-- Tree View -->
    <record id="view_fraud_number_range_tree" model="ir.ui.view">
        <field name="name">fraud.number.range.tree</field>
        <field name="model">fraud.number.range</field>
        <field name="arch" type="xml">
            <tree>
                <field name="range_fraud"/>
                <field name="type_fraud"/>
                <field name="status" widget="badge" decoration-warning="status == 'suspected'"
                       decoration-info="status == 'sent'"
                       decoration-danger="status == 'blocked'"/>
                <field name="time_stamp"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fraud_number_range_form" model="ir.ui.view">
        <field name="name">fraud.number.range.form</field>
        <field name="model">fraud.number.range</field>
        <field name="arch" type="xml">
            <form string="Suspected Number Range">
                <header>
                    <button name="make_reported"
                            string="ğŸ“¤ Mark as Reported"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible':[('status','!=','suspected')]}"/>
                    <button name="make_blocked"
                            string="â›” Block"
                            type="object"
                            class="btn-danger"
                            attrs="{'invisible':[('status','!=','sent')]}"/>
                    <field name="status"
                           widget="statusbar"
                           statusbar_visible="suspected,sent,blocked"/>
                </header>

                <sheet>
                    <group>
                            <field name="range_fraud" placeholder="e.g. +21891xxxxxxx or IMSI prefix"/>
                            <field name="range_type" />
                            <field name="type_fraud"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="time_stamp"/>
                        </group>
                    <group>
                        <group string="Detected">
                            <field name="detected_by"/>
                            <field name="detected_at"/>
                        </group>
                        <group string="Reported">
                            <field name="reported_by"/>
                            <field name="reported_at"/>
                        </group>
                        <group string="Blocked">
                            <field name="blocked_by"/>
                            <field name="blocked_at"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Additional notes or context..."/>
                    </group>
                    <notebook>
                        <page string="ğŸ“œ History">
                            <field name="activity_ids" readonly="1">
                                <tree>
                                    <field name="time_stamp"/>
                                    <field name="create_uid" string="Action by"/>
                                    <field name="status" widget="badge" decoration-warning="status == 'suspected'"
                                           decoration-info="status == 'sent'"
                                           decoration-danger="status == 'blocked'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_fraud_number_range" model="ir.actions.act_window">
        <field name="name">Number Ranges</field>
        <field name="res_model">fraud.number.range</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Fraud Type Tree/Form Views -->
    <record id="view_fraud_type_tree" model="ir.ui.view">
        <field name="name">fraud.type.tree</field>
        <field name="model">fraud.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_fraud_type" model="ir.actions.act_window">
        <field name="name">Fraud Types</field>
        <field name="res_model">fraud.type</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>