<odoo>
    <record id="view_rafm_control_form" model="ir.ui.view">
        <field name="name">rafm.control.form</field>
        <field name="model">rafm.control</field>
        <field name="arch" type="xml">
            <form string="RAFM">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_modification_log_wizard" type="object" string="Log Modification"
                                icon="fa-plus-circle" class="oe_stat_button"/>
                    </div>
                    <group>
                        <group>
                            <field name="rafm_id"/>
                            <field name="audit_name"/>
                        </group>
                        <group>
                            <field name="domain"/>
                            <field name="category_id"/>
                            <field name="critical_level"/>
                        </group>
                        <group>
                            <field name="assigned_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="source_nodes" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="reason" colspan="2"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Frontend and Cycle">
                            <group>
                                <group>
                                    <field name="frontend_id" widget="many2many_tags"/>
                                    <field name="url" widget="url"/>
                                    <field name="audits_generation_cycle_id" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        <page string="Modification Logs">
                            <field name="modifications_ids" options="{'no_open': True}" widget="one2many_list"
                                   readonly="1" create="false" edit="false" delete="false">
                                <tree readonly="1">
                                    <field name="time_stamp"/>
                                    <field name="description"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rafm_control_tree" model="ir.ui.view">
        <field name="name">rafm.control.tree</field>
        <field name="model">rafm.control</field>
        <field name="arch" type="xml">
            <tree string="RAFM Controls">
                <field name="rafm_id"/>
                <field name="audit_name"/>
                <field name="category_id"/>
                <field name="checked_recently" invisible="1"/>
                <field name="domain" optional="show"/>
                <field name="critical_level" optional="show"/>
                <button name="make_pass" type="object" string="Pass" class="btn-success"/>
                <button name="make_etl_issue" type="object" string="ETL Issue" class="btn-warning"/>
                <button name="make_suspected" type="object" string="Suspected" class="btn-danger"/>
            </tree>
        </field>
    </record>

    <record id="view_rafm_control_search" model="ir.ui.view">
        <field name="name">rafm.control.search</field>
        <field name="model">rafm.control</field>
        <field name="arch" type="xml">
            <search>
                <field name="audit_name"/>
                <field name="rafm_id"/>
                <filter name="checked_recently" string="Controls To Check"
                        domain="[('checked_recently', '=', False),('assigned_ids', 'in', [uid])]"/>
            </search>
        </field>
    </record>


    <record id="action_rafm_control" model="ir.actions.act_window">
        <field name="name">RAFM Controls</field>
        <field name="res_model">rafm.control</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_checked_recently': 1}</field>
        <field name="help" type="html">
            <p>Create and manage RAFM controls.</p>
        </field>
    </record>

    <record id="action_make_pass" model="ir.actions.server">
        <field name="name">Mark as Pass</field>
        <field name="model_id" ref="rafm_controls_managment.model_rafm_control"/> <!-- Update this -->
        <field name="binding_model_id" ref="rafm_controls_managment.model_rafm_control"/> <!-- Same here -->
        <field name="state">code</field>
        <field name="code">records.make_pass()</field>
    </record>

</odoo>
