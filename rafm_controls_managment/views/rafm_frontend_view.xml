<odoo>
    <record id="view_rafm_frontend_form" model="ir.ui.view">
        <field name="name">rafm.controls.frontend.form</field>
        <field name="model">rafm.controls.frontend</field>
        <field name="arch" type="xml">
            <form string="RAFM Frontend">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="system_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rafm_frontend_tree" model="ir.ui.view">
        <field name="name">rafm.controls.frontend.tree</field>
        <field name="model">rafm.controls.frontend</field>
        <field name="arch" type="xml">
            <tree string="RAFM Frontends">
                <field name="name"/>
                <field name="system_type"/>
            </tree>
        </field>
    </record>

    <record id="action_rafm_frontend" model="ir.actions.act_window">
        <field name="name">RAFM Frontends</field>
        <field name="res_model">rafm.controls.frontend</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
