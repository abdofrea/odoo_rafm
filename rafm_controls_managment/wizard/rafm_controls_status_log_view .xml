<odoo>
    <record id="rafm_controls_status_wizard" model="ir.ui.view">
        <field name="name">rafm.controls.status.wizard.form</field>
        <field name="model">rafm.controls.status.wizard</field>
        <field name="arch" type="xml">
            <form string="Enter Description">
                <group>
                    <group>
                        <field name="time_stamp"/>
                        <field name="user_id" invisible="1"/>
                        <field name="control_id" invisible="1"/>
                        <field name="status" readonly="1" widget="badge" decoration-warning="status == 'etl_issue'" decoration-danger="status == 'suspected'" decoration-success="status == 'pass'"/>
                    </group>
                    <group>
                        <field name="text_input"/>
                    </group>
                </group>
                <footer>
                    <button name="confirm_action" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rafm_controls_status_wizard" model="ir.actions.act_window">
        <field name="name">Enter Description</field>
        <field name="res_model">rafm.controls.status.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="rafm_controls_status_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
